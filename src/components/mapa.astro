<section id="ubicacion" class="py-12 bg-white">
  <div class="max-w-6xl mx-auto px-4 text-center mb-6">
    <h2 class="text-3xl font-bold text-truper mb-4">Nuestra Ubicación</h2>
    <p class="text-gray-600">
      Visítanos en nuestra tienda física. ¡Te esperamos!
    </p>
  </div>

  <div class="max-w-6xl mx-auto px-4">
    <!-- Contenedor con esquinas redondeadas y sombra -->
    <div class="rounded-xl overflow-hidden shadow-lg">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14956.022576187996!2d-103.60155755000001!3d20.42384895!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8425f902d9207b07%3A0xb0a78806aff0d628!2sSurtidora%20Ferretera%20Y%20Espacio%20Ceramico!5e0!3m2!1ses!2smx!4v1752955525252!5m2!1ses!2smx"
        class="w-full h-64 md:h-96 border-0"
        allowfullscreen
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </div>
</section>
